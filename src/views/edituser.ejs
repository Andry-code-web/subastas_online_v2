<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Cambio de Contraseña</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/partials/styles_cambiarusuarios.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>

<body>
    <div class="container form-container">
        <div class="row">
            <div class="col-md-4">
                <div class="sidebar">
                    <h5>Perfil del Usuario</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white" onclick="showSection('userInfo')"><i class="fas fa-user"></i>
                                Información de usuario</a></li>
                        <li class="mt-3"><a href="#" class="text-white rounded d-block"
                                onclick="showSection('changePassword')"><i class="fas fa-lock"></i> Contraseña</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <!-- Sección de información del usuario -->
                <div id="userInfo" class="hidden">
                    <div class="form-title active text-white">
                        <h4 class="form-title">Información del Usuario</h4>
                    </div>
                    <form action="/editar_user" method="post">
                        <div class="form-group">
                            <label for="username">Usuario</label>
                            <input type="text" class="form-control" id="username" value="">
                        </div>
                        <div class="form-group">
                            <label for="email">Correo electrónico</label>
                            <input type="email" class="form-control" id="email" value="">
                        </div>
                        <div class="form-group">
                            <label for="confirmEmail">Correo de confirmación</label>
                            <input type="email" class="form-control" id="confirmEmail" value="">
                        </div>
                        <div class="form-group">
                            <label for="phone">Celular</label>
                            <input type="text" class="form-control" id="phone" value="">
                        </div>
                        <button type="submit">Cambiar</button>
                    </form>
                </div>
                <!-- Sección de cambio de contraseña -->
                <div id="changePassword">
                    <div class="form-title">
                        <h4 class="form-title">Cambia tu contraseña</h4>
                    </div>
                    <form id="passwordChangeForm" action="/editar_psswd" method="post">
                        <div class="form-group">
                            <label for="currentPassword">Contraseña anterior</label>
                            <input type="password" class="form-control" id="currentPassword" required
                                placeholder="********">
                        </div>
                        <div class="form-group">
                            <label for="newPassword">Nueva contraseña</label>
                            <input type="password" class="form-control" id="newPassword" required
                                placeholder="********">
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword">Confirmar nueva contraseña</label>
                            <input type="password" class="form-control" id="confirmPassword" required
                                placeholder="********">
                        </div>
                        <button type="submit">Cambiar</button>
                        <div id="campoOK" style="margin-top: 10px;"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script>
        document.getElementById('passwordChangeForm').addEventListener('submit', function (event) {
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const valido = document.getElementById('campoOK');
            // Definir las expresiones regulares
            const regexMayusculas = /[A-ZÁÉÍÓÚÜÑ]/;
            const regexMinusculas = /[a-záéíóúüñ]/;
            const regexNumeros = /\d/;
            const regexCaracteresEspeciales = /[!@#$%^&*(),.?":{}|<>]/;
            // Verificar cada criterio
            const mensajes = [];
            if (newPassword !== confirmPassword) {
                mensajes.push('Las contraseñas no coinciden. Por favor, inténtalo de nuevo.');
            }
            if (!regexMayusculas.test(newPassword)) {
                mensajes.push("Debe contener al menos una letra mayúscula.");
            }
            if (!regexMinusculas.test(newPassword)) {
                mensajes.push("Debe contener al menos una letra minúscula.");
            }
            if (!regexNumeros.test(newPassword)) {
                mensajes.push("Debe contener al menos un número.");
            }
            if (!regexCaracteresEspeciales.test(newPassword)) {
                mensajes.push("Debe contener al menos un carácter especial.");
            }
            // Mostrar los mensajes con SweetAlert
            if (mensajes.length > 0) {
                event.preventDefault();
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    html: mensajes.join('<br>')
                });
            } else {
                event.preventDefault(); // para que no se envíe el formulario antes de mostrar el mensaje
                Swal.fire({
                    icon: 'success',
                    title: '¡Éxito!',
                    text: 'Contraseña válida, ¡no la olvides!',
                    timer: 2000,
                    showConfirmButton: false
                }).then(() => {
                    document.getElementById('passwordChangeForm').submit(); // enviar formulario después de mostrar el mensaje
                });
            }
        });

        function showSection(sectionId) {
            // Oculta todas las secciones
            document.getElementById('userInfo').classList.add('hidden');
            document.getElementById('changePassword').classList.add('hidden');
            // Elimina la clase activa de ambos títulos
            document.querySelectorAll('.form-title').forEach(title => title.classList.remove('active'));
            // Muestra la sección seleccionada
            if (sectionId === 'userInfo') {
                document.getElementById('userInfo').classList.remove('hidden');
                document.querySelector('.form-title').classList.add('active');
            } else {
                document.getElementById('changePassword').classList.remove('hidden');
                document.querySelectorAll('.form-title')[1].classList.add('active');
            }
        }
        // Mostrar sección de cambio de contraseña por defecto
        showSection('changePassword');
    </script>
</body>

</html>