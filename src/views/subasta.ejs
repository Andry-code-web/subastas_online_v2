                  text: "Se está procesando el depósito. Por favor, espera...",
                  confirmButtonText: 'Ok',
                  onDismiss: () => {
                    window.location.href = '/catalogo';
                  }
                });
              } else {
                window.location.href = '/catalogo';
              }
            });
          }
        } else {
          Swal.fire("No has aceptado los términos y condiciones");
        }
      });
    });

  </script>

