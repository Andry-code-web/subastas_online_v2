<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/partials/styles_cambiar_contraseña.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/partials/styles_header.css">
    <link rel="stylesheet" href="/css/partials/styles_footer.css">
    <link rel="stylesheet" href="/css/partials/styles_whatsapp_flot.css">
    <link rel="stylesheet" href="/css/partials/styles_search.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- ICONS -->
    <script src="https://kit.fontawesome.com/78137c0870.js" crossorigin="anonymous"></script>
</head>

<body>
    <!-- HEADER -->
    <%- include('partials/header') %>

        <div class="container form-container">
            <div class="row">
                <div class="col-md-4">
                    <div class="sidebar">
                        <h5 class="Titulo_general">Perfil del Usuario</h5>
                        <ul class="list-unstyled">
                            <li>
                                <i class="fas fa-user"></i>
                                Contraseña
                            </li>
                        </ul>
                        <img src="/img/SUBASTA-SUR-POSITIVO-VERTICAL.png" alt="Imagen de Perfil" class="img-fluid mt-3">
                    </div>
                </div>
                <div class="col-md-8">
                    <!-- Sección de información del usuario -->
                    <div id="userInfo" class="">
                        <div class="form-title active text-white">
                            <h4 class="form-title">Cambiar contraseña</h4>
                        </div>
                        <form action="/actualizar/contraseña" method="post" class="formulario_usuario">
                            <div class="form-group">
                                <label for="newPassword">Nueva contraseña</label>
                                <input type="password" class="form-control inputss" id="newPassword" name="newPassword"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="confirmPassword">Confirmar nueva contraseña</label>
                                <input type="password" class="form-control inputss" id="confirmPassword"
                                    name="confirmPassword" required>
                            </div>
                            <button class="enviarform" type="submit center">
                                Enviar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://kit.fontawesome.com/a076d05399.js"></script>
        </script>
        <script src="/js/partials/script_header.js"></script>
        <script src="/js/partials/script_whatsapp_flot.js"></script>
</body>

</html>