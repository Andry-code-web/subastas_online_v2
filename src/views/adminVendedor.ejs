<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Subastas - admin vendedor</title>
  <link rel="shortcut icon" href="/img/footer_logo.svg" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link rel="stylesheet" href="/css/style_adminV.css">
</head>

<body>
  <!-- Estructura principal -->
  <div class="d-flex">
    <!-- Sidebar del administrador -->
    <div class="d-flex flex-column justify-content-between sidebar p-3">
      <div>
        <!-- Logo y nombre del dashboard -->
        <div class="mb-4">
          <h2 class="text-white">Subastas</h2>
          <p class="text-white">Admin Vendedor</p>
        </div>
        <!-- Menú de navegación -->
        <ul class="nav flex-column">
          <!-- Opciones del menú -->
          <li class="nav-item">
            <a class="nav-link active" href="#"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a>
          </li>
          <!-- Otras opciones del menú -->
        </ul>
      </div>
      <!-- Perfil del usuario -->
      <div class="user-profile mt-auto d-flex align-items-center">
        <img src="https://placehold.co/40x40" alt="Profile Picture" class="rounded-circle me-2">
        <div class="d-flex flex-column ms-2">
          <div>
            <strong>Admin Vendedor</strong><br>
            <small>
              <%= nombreUsuario %>
            </small>
          </div>
          <a href="/admin/logoutAdminV" class="btn btn-danger btn-sm">Cerrar Sesión</a>
        </div>

      </div>
    </div>
    <!-- Contenido principal -->
    <div class="main-content">
      <!-- Encabezado y barra de navegación -->
      <div class="d-flex justify-content-between mb-4">
        <h1>Dashboard - Admin Vendedor</h1>
        <!-- Opciones de perfil y configuración -->
        <div class="d-flex align-items-center">
          <span class="me-3">
            <%= nombreUsuario %>
          </span>
          <img src="https://placehold.co/40x40" alt="Profile" class="rounded-circle">
        </div>
      </div>
      <!-- Sección de estadísticas -->
      <div class="row mb-4">
        <!-- Tarjetas de estadísticas -->
        <div class="col-md-3">
          <div class="stats-card">
            <h6>Total Subastas</h6>
            <h3>
              <%= numSubastas %>
            </h3>
            <!-- Datos estadísticos -->
          </div>
        </div>
        <!-- Más tarjetas de estadísticas -->
      </div>
      <!-- Gráficos y tablas -->
      <div class="row mb-4">
        <!-- Gráfico de visitantes y tarjeta de nuevas subastas -->
        <div class="col-md-8">
          <div class="graph-card">
            <h5>Subastas</h5>
            <!-- Gráfico de subastas y ofertas -->
            <div class="chart-container ">
              <div style="overflow-y: auto; height: 100%; ">
                <!-- Establece la altura máxima y habilita el desplazamiento vertical -->
                <table class="table-bordered" style="width: 100%; text-align: center;">
                  <thead style="font-weight: 600; font-size: .9rem;">
                    <tr>
                      <td>Nombre prop.</td>
                      <td>Descipción</td>
                      <td>Categoria</td>
                      <td>Direccion</td>
                      <td>Precio</td>
                      <td>N° Cuartos</td>
                      <td>N° Baños</td>
                      <td>N° Cosina</td>
                      <td>N° Cochera</td>
                      <td>Patio</td>
                    </tr>
                  </thead>
                  <tbody style="font-size: .9rem;">
                    <% subastas.forEach(subasta=> { %>
                      <tr>
                        <td>
                          <%= subasta.nombre_propiedad %>
                        </td>
                        <td class="truncate">
                          <%= subasta.descripcion %>
                        </td>
                        <td>
                          <%= subasta.categoria %>
                        </td>
                        <td>
                          <%= subasta.direccion %>
                        </td>
                        <td>
                          <%= subasta.precio_base %>
                        </td>
                        <td>
                          <%= subasta.N_cuartos %>
                        </td>
                        <td>
                          <%= subasta.N_baños %>
                        </td>
                        <td>
                          <%= subasta.N_cocina %>
                        </td>
                        <td>
                          <%= subasta.N_cocheras %>
                        </td>
                        <td>
                          <%= subasta.patio %>
                        </td>
                      </tr>
                      <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <!-- Formulario para crear nueva subasta -->
          <div class="card">
            <form action="/admin/subir-inmueble" method="POST" enctype="multipart/form-data">
              <div class="card">
                <div class="card-header">
                  <h5 class="card-title">Subir Inmueble</h5>
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="mb-3">
                        <label for="titulo">Título del Inmueble</label>
                        <input type="text" class="form-control" id="titulo" name="nombre_propiedad" required>
                      </div>
                      <div class="mb-3">
                        <label for="descripcion">Descripción</label>
                        <textarea class="form-control" id="descripcion" name="descripcion" rows="2" required></textarea>
                      </div>
                      <div class="mb-3">
                        <label for="titulo">Categoria</label>
                        <input type="text" class="form-control" id="titulo" name="categoria" required>
                      </div>
                      <div class="mb-3">
                        <label for="direccion">Dirección</label>
                        <input type="text" class="form-control" id="direccion" name="direccion" required>
                      </div>
                      <div class="mb-3">
                        <label for="precio">Precio</label>
                        <input type="number" class="form-control" id="precio" name="precio_base" required>
                      </div>
                      <div class="mb-3">
                        <label for="N_banos">Número de Baños</label>
                        <input type="number" class="form-control" id="N_banos" name="N_banos" required>
                      </div>
                    </div>
                    <div class="col-md-6">

                      <div class="mb-3">
                        <label for="N_cuartos">Número de Cuartos</label>
                        <input type="number" class="form-control" id="N_cuartos" name="N_cuartos" required>
                      </div>
                      <div class="mb-3">
                        <label for="N_cocina">Número de Cocinas</label>
                        <input type="number" class="form-control" id="N_cocina" name="N_cocina" required>
                      </div>
                      <div class="mb-3">
                        <label for="N_cocheras">Número de Cocheras</label>
                        <input type="number" class="form-control" id="N_cocheras" name="N_cocheras" required>
                      </div>
                      <div class="mb-3">
                        <label for="patio">Patio</label>
                        <select class="form-select" id="patio" name="patio" required>
                          <option value="si">Sí</option>
                          <option value="no">No</option>
                        </select>
                      </div>
                      <div class="mb-3">
                        <label for="">fecha</label>
                        <input type="date" class="form-control calendario" name="" id="">
                      </div>
                      <div class="mb-3">
                        <label for="">Hora</label>
                        <input type="time" class="form-control" name="" id="">
                      </div>
                    </div>
                  </div>
                  <div class="mb-3">
                    <div class="row">
                      <label for="imagenes" class="form-label">Imágenes</label>
                      <input type="file" name="images" multiple>
                    </div>
                  </div>

                  <button type="submit" class="btn btn-primary">Subir Inmueble</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- SCRIPTS -->
  <script>

  </script>
</body>

</html>