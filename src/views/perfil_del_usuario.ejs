<!doctype html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="quierovender.css">
    <title>Bootstrap Example</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body class="p-3 m-0 border-0 bd-example">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header">
                        <h5>Perfil del usuario</h5>
                    </div>
                    <div class="card-body">
                        <form>
                            <!-- nombre -->
                            <div class="mb-3">
                                <label for="name" class="form-label">Nombres completos</label>
                                <input type="text" class="form-control" id="name" value="Juan Carlos" readonly>
                                <div id="nameHelp" class="form-text">Este campo es definitivo y no se puede modificar.
                                </div>
                            </div>

                            <!-- apellidos -->
                            <div class="mb-3">
                                <label for="surname" class="form-label">Apellidos completos</label>
                                <input type="text" class="form-control" id="surname" value="Pérez González" readonly>
                                <div id="surnameHelp" class="form-text">Este campo es definitivo y no se puede
                                    modificar.</div>
                            </div>

                            <!-- correo -->
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Dirección de correo
                                    electrónico</label>
                                <input type="email" class="form-control" id="exampleInputEmail1"
                                    aria-describedby="emailHelp">
                                <div id="emailHelp" class="form-text">Nunca compartiremos su correo electrónico con
                                    nadie más.</div>
                            </div>

                            <!-- numero -->
                            <div class="mb-3">
                                <label for="cellNumber" class="form-label">Número de celular</label>
                                <input type="tel" class="form-control" id="cellNumber"
                                    aria-describedby="cellNumberHelp">
                                <div id="cellNumberHelp" class="form-text">Ingrese su número de celular.</div>
                            </div>

                            <!-- dni -->
                            <div class="mb-3">
                                <label for="dni" class="form-label">DNI</label>
                                <input type="text" class="form-control" id="dni" value="12345678" readonly>
                                <div id="dniHelp" class="form-text">Este campo es definitivo y no se puede modificar.
                                </div>
                            </div>
                            
                            <!-- boton -->
                            <button type="submit" class="btn btn-primary">Entregar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>