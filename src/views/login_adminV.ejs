<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Script para insertar el captcha -->
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <!-- BOOTSTRAP ICON -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- ESTILOS -->
    <link rel="stylesheet" href="/css/style_login_adminV.css">
    <link rel="shortcut icon" href="/img/footer_logo.svg" type="image/x-icon">

    <title>Login Admin Vendedor || Subastas</title>
</head>

<body>
    <div class="content">
        <div class="content_form text-center">
            <h1>
                Bien
                <span class="dos">venido</span>
            </h1>
            <h2 class="mb-5">Subasta Sur</h2>
            <form action="/admin/loginAdminV" method="post" id="loginForm">
                <div class="inputs d-flex flex-column justify-content-center">
                    <input class="mb-3" name="usuario" type="text" placeholder="Usuario" required>
                    <div class="input_contra position-relative mt-3 mb-4">
                        <input class="password-input" name="contraseña" type="password" placeholder="Contraseña" required>
                        <button type="button" class="toggle-password">
                            <i class="bi bi-eye-fill"></i>
                        </button>
                    </div>
                    <!-- Div para el captcha centrado -->
<div class="mt-2 d-flex justify-content-center mb-3">
    <div class="g-recaptcha" data-sitekey="6LcTyFwqAAAAANK1pGMhYtRVRZUb1bQbkaq89meG"></div>
</div>

                </div>
                <button class="btn_enviar mb-3" type="submit">Iniciar sesión</button>
                <button class="btn_registro" id="btn_registro" type="button">Registrarme</button>
                <p class="regresar">
                    <span>
                        Regresar al
                    </span>
                    <span>
                        <a href="/">Inicio</a>
                    </span>
                </p>
            </form>
        </div>
    </div>

    <script>
        // Toggle para mostrar u ocultar la contraseña
        document.querySelector('.toggle-password').addEventListener('click', function () {
            const passwordInput = document.querySelector('.password-input');
            const passwordIcon = this.querySelector('i');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                passwordIcon.classList.remove('bi-eye-fill');
                passwordIcon.classList.add('bi-eye-slash-fill');
            } else {
                passwordInput.type = 'password';
                passwordIcon.classList.remove('bi-eye-slash-fill');
                passwordIcon.classList.add('bi-eye-fill');
            }
        });

    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Prevenir el envío del formulario

            // Verificar si el captcha está completo
            const captchaResponse = grecaptcha.getResponse();
            if (captchaResponse === '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Por favor, completa el captcha'
                });
                return; // Detener la ejecución si el captcha no está completo
            }

            // Si el captcha está completo, continuar con el proceso de envío del formulario
            const formData = new FormData(this);
            const data = {
                usuario: formData.get('usuario'),
                contraseña: formData.get('contraseña'),
                captcha: captchaResponse // Incluir la respuesta del captcha
            };

            fetch('/admin/loginAdminV', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Inicio de sesión exitoso',
                            text: result.message,
                            confirmButtonText: 'Continuar'
                        }).then(() => {
                            window.location.href = result.redirectUrl;
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: result.message,
                            confirmButtonText: 'Intentar de nuevo'
                        });
                    }
                })
                .catch(error => {
                    console.error('Error en el inicio de sesión:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Ocurrió un error inesperado. Inténtalo nuevamente.',
                        confirmButtonText: 'Intentar de nuevo'
                    });
                });
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const registro = document.getElementById('btn_registro');

            registro.addEventListener('click', () => {
                Swal.fire({
                    icon: 'warning',
                    title: 'Registrarme',
                    text: 'Envie un correo electronico con asunto "quiero subastar veiculos" a subastasur@correo.com',
                    confirmButtonText: 'Continuar',
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            icon: 'info',
                            text: 'En breves te enviamos tus credenciales'
                        })
                    }
                });
            });
        });
    </script>

</body>
</html>
