    <link rel="stylesheet" href="/css/style_recuContra.css">
    <title>Recuperar contraseña || Subastas</title>
</head>

<body>
    <div class="d-flex justify-content-center">
        <div class="content d-flex flex-column align-items-center">
            <h2 class="mb-4">Cambiar contraseña</h2>
            <form action="/admin/recuperar" method="post" class="d-flex flex-column align-items-center"
                id="recoverForm">
                <div class="inputs mb-3">
                    <input type="email" class="form-control" name="email" id="exampleInputEmail1" placeholder=" "
                        required>
                    <label for="exampleInputEmail1" class="form-control-placeholder">Correo electrónico</label>
                </div>

                <div class="key mb-4 mt-3 row justify-content-center text-center" id="codeSection"
                    style="display: none;">
                    <p>Ingrese el código</p>
                    <input type="number" class="keys col" name="code1" required min="0" max="99">
                    <input type="number" class="keys col" name="code2" required min="0" max="99">
                    <input type="number" class="keys col" name="code3" required min="0" max="99">
                    <input type="number" class="keys col" name="code4" required min="0" max="99">
                    <input type="number" class="keys col" name="code5" required min="0" max="99">
                </div>

                <div class="new_contra mb-1 d-flex flex-column active_new_contra">
                    <p>Ingrese su nueva contraseña</p>
                    <div class="inputs mb-1">
                        <input type="password" class="form-control" name="newPassword" id="exampleInputContraseña"
                            placeholder=" " required>
                        <label for="exampleInputContraseña" class="form-control-placeholder">Nueva contraseña</label>
                    </div>
                    <div class="inputs">
                        <input type="password" class="form-control" name="confirmPassword"
                            id="exampleInputConfirmContraseña" placeholder=" " required>
                        <label for="exampleInputConfirmContraseña" class="form-control-placeholder">Confirme la nueva
                            contraseña</label>
                    </div>
                </div>

                <button type="button" id="sendEmailBtn" class="btn btn-primary">Enviar correo</button>
                <button type="button" id="validateCodeBtn" class="btn btn-primary active_key">Validar código</button>
                <button type="button" id="changePasswordBtn" class="btn btn-primary active_new_contra">Cambiar
                    contraseña</button>

                <hr>

                <a class="subastas" href="/user/subasta">Únete a una subasta</a>
                <a class="inicioSesion mt-2" href="/admin/loginAdminG">Iniciar sesión</a>
            </form>
        </div>
    </div>

    <script src="/js/script_nueva_contra.js"></script>

