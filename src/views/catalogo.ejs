            <button class="like-button" data-subasta-id="<%= subasta.id %>">
              <i class="bi bi-heart-fill like-icon <%= subasta.liked_by_user ? 'like-filled' : 'd-none' %>"></i>
              <i class="bi bi-heart like-icon <%= subasta.liked_by_user ? 'd-none' : 'like-empty' %>"></i>
            </button>
          </div>
        </div>
